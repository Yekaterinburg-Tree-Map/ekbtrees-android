<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.edittree.EditTreeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="24dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/map_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:viewBindingIgnore="true">

                        <androidx.fragment.app.FragmentContainerView xmlns:map="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:clickable="false"
                            map:cameraZoom="18"
                            map:liteMode="true" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/latitude_label"
                        style="@style/EditTreeParameterLabel"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/latitude"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/map_card"
                        tools:viewBindingIgnore="true" />

                    <TextView
                        android:id="@+id/latitude_value"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="24dp"
                        android:gravity="end"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/map_card"
                        tools:text="Value" />

                    <TextView
                        style="@style/EditTreeParameterLabel"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/longitude"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/latitude_label"
                        tools:viewBindingIgnore="true" />

                    <TextView
                        android:id="@+id/longitude_value"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="24dp"
                        android:gravity="end"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/latitude_value"
                        tools:text="Value" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/change_location_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/change_location"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/longitude_value" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:paddingBottom="4dp"
                app:cardCornerRadius="24dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp">

                    <TextView
                        android:id="@+id/species_label"
                        style="@style/EditTreeParameterLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/species"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:viewBindingIgnore="true" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/tree_species_value"
                        style="@style/EditTreeParameterInputTextValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:isScrollContainer="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/species_label" />

                    <TextView
                        android:id="@+id/number_of_trunks_label"
                        style="@style/EditTreeParameterLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/number_of_trunks"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tree_species_value"
                        tools:viewBindingIgnore="true" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/number_of_trunks_value"
                        style="@style/EditTreeParameterInputTextValue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal"
                        app:layout_constraintTop_toBottomOf="@+id/number_of_trunks_label" />

                    <TextView
                        android:id="@+id/trunk_girth_label"
                        style="@style/EditTreeParameterLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/trunk_girth"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/number_of_trunks_value"
                        tools:viewBindingIgnore="true" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/trunk_girth_value"
                        style="@style/EditTreeParameterInputTextValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        app:layout_constraintTop_toBottomOf="@+id/trunk_girth_label" />

                    <TextView
                        android:id="@+id/diameter_of_crown_label"
                        style="@style/EditTreeParameterLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/diameter_of_crown"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/trunk_girth_value"
                        tools:viewBindingIgnore="true" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/diameter_of_crown_value"
                        style="@style/EditTreeParameterInputTextValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        app:layout_constraintTop_toBottomOf="@id/diameter_of_crown_label" />

                    <TextView
                        android:id="@+id/age_label"
                        style="@style/EditTreeParameterLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/age"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/diameter_of_crown_value"
                        tools:viewBindingIgnore="true" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/age_value"
                        style="@style/EditTreeParameterInputTextValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        app:layout_constraintTop_toBottomOf="@id/age_label" />

                    <TextView
                        android:id="@+id/height_of_the_first_branch_label"
                        style="@style/EditTreeParameterLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/height_of_the_first_branch"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/age_value"
                        tools:viewBindingIgnore="true" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/height_of_the_first_branch_value"
                        style="@style/EditTreeParameterInputTextValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        app:layout_constraintTop_toBottomOf="@id/height_of_the_first_branch_label" />

                    <TextView
                        android:id="@+id/condition_assessment_label"
                        style="@style/EditTreeParameterLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/condition_assessment"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/height_of_the_first_branch_value"
                        tools:viewBindingIgnore="true" />

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/condition_assessment_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp"
                        android:max="5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/condition_assessment_label" />

                    <TextView
                        android:id="@+id/condition_assessment_text_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/condition_assessment_value" />

                    <TextView
                        android:id="@+id/planting_type_label"
                        style="@style/EditTreeParameterLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/tree_planting_type"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/condition_assessment_text_value"
                        tools:viewBindingIgnore="true" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/planting_type_value"
                        style="@style/EditTreeParameterInputTextValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/planting_type_label" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="24dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp">

                    <TextView
                        android:id="@+id/tree_id_label"
                        style="@style/EditTreeParameterLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/tree_id"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:viewBindingIgnore="true" />

                    <TextView
                        android:id="@+id/tree_id_value"
                        style="@style/EditTreeParameterInputTextValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tree_id_label"
                        tools:text="Tree Id Value" />

                    <TextView
                        android:id="@+id/author_label"
                        style="@style/EditTreeParameterLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/author_of_tree"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tree_id_value"
                        tools:viewBindingIgnore="true" />

                    <TextView
                        android:id="@+id/author_value"
                        style="@style/EditTreeParameterInputTextValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/author_label"
                        tools:text="Author" />

                    <TextView
                        android:id="@+id/tree_status_label"
                        style="@style/EditTreeParameterLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/status"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/author_value"
                        tools:viewBindingIgnore="true" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/tree_status_value"
                        style="@style/EditTreeParameterInputTextValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tree_status_label" />

                    <TextView
                        android:id="@+id/create_time_label"
                        style="@style/EditTreeParameterLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/create_time"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tree_status_value"
                        tools:viewBindingIgnore="true" />

                    <TextView
                        android:id="@+id/create_time_value"
                        style="@style/EditTreeParameterInputTextValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/create_time_label"
                        tools:text="DD-MM-YYYY HH-MM" />

                    <TextView
                        android:id="@+id/update_time_label"
                        style="@style/EditTreeParameterLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/update_time"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/create_time_value"
                        tools:viewBindingIgnore="true" />

                    <TextView
                        android:id="@+id/update_time_value"
                        style="@style/EditTreeParameterInputTextValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/update_time_label"
                        tools:text="DD-MM-YYYY HH-MM" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginBottom="8dp"
        android:text="@string/save_tree"
        app:backgroundTint="@color/green"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        style="@style/GradientStyle"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:contentDescription="@string/gradient"
        android:src="@drawable/background_gradient"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>